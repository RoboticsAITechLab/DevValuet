<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devvault.frontend.controllers.NewProjectDialogController" styleClass="dialog-container">
   <children>
      <Label styleClass="dialog-title" text="ðŸ†• Create New Project">
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      
      <GridPane hgap="10.0" vgap="15.0">
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="NEVER" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
         <children>
            <Label styleClass="form-label" text="Project Name:" />
            <TextField fx:id="projectNameField" promptText="Enter project name" styleClass="form-input" GridPane.columnIndex="1" GridPane.columnSpan="2" />
            
            <Label styleClass="form-label" text="Project Path:" GridPane.rowIndex="1" />
            <TextField fx:id="projectPathField" promptText="Select project directory" styleClass="form-input" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="browsePathButton" styleClass="secondary-button" text="Browse..." GridPane.columnIndex="2" GridPane.rowIndex="1" />
            
            <Label styleClass="form-label" text="Project Type:" GridPane.rowIndex="2" />
            <ComboBox fx:id="projectTypeComboBox" prefWidth="200.0" styleClass="form-input" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />
            
            <Label styleClass="form-label" text="Description:" GridPane.rowIndex="3" />
            <TextArea fx:id="projectDescriptionArea" prefRowCount="3" promptText="Enter project description (optional)" styleClass="form-input" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />
            
            <Label styleClass="form-label" text="Features:" GridPane.rowIndex="4" />
            <VBox spacing="10.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="4">
               <children>
                  <CheckBox fx:id="enableAICheckBox" selected="true" styleClass="feature-checkbox" text="ðŸ§  Enable AI-Powered Features" />
                  <CheckBox fx:id="enableBackupCheckBox" selected="true" styleClass="feature-checkbox" text="ðŸ’¾ Enable Automatic Backup" />
                  <CheckBox fx:id="enableSecurityCheckBox" selected="true" styleClass="feature-checkbox" text="ðŸ”’ Enable Security Monitoring" />
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </VBox.margin>
      </GridPane>
      
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="cancelButton" styleClass="cancel-button" text="Cancel" />
            <Button fx:id="createButton" styleClass="primary-button" text="Create Project" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>